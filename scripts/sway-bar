#!/bin/bash

# Mostly stolen from https://git.sr.ht/~oscarcp/ghostfiles/tree/master/sway_wm/

# Date and time
date_and_week=$(date "+%Y/%m/%d (w%-V)")
current_time=$(date "+%H:%M")

# Battery or charger
battery_charge=$(upower --show-info $(upower --enumerate | grep 'BAT') | egrep "percentage" | awk '{print $2}')
battery_status=$(upower --show-info $(upower --enumerate | grep 'BAT') | egrep "state" | awk '{print $2}')

# Others
loadavg_5min=$(cat /proc/loadavg | awk -F ' ' '{print $2}')

# Audio
audio_volume=$(pamixer --sink 0 --get-volume)
audio_is_muted=$(pamixer --sink 0 --get-mute)

# Network
network=$(ip route get 1.1.1.1 | grep -Po '(?<=dev\s)\w+' | cut -f1 -d ' ')
# interface_easyname grabs the "old" interface name before systemd renamed it
interface_easyname=$(dmesg | grep $network | grep renamed | awk 'NF>1{print $NF}')

if [ $battery_status = "discharging" ];
then
    battery_pluggedin='âš '
else
    battery_pluggedin='âš¡'
fi

if ! [ $network ]
then
   network_active="â›”"
else
   network_active="â‡†"
fi

if [ $audio_is_muted = "true" ]
then
    audio_active='ğŸ”‡'
else
    audio_active='ğŸ”Š'
fi

if ! [ $network ]
then
   network_active="â›”"
else
   network_active="â‡†"
fi

echo " ğŸ‹ $loadavg_5min | $network_active $interface_easyname | $audio_active $audio_volume% | $battery_pluggedin $battery_charge | $date_and_week ğŸ•˜ $current_time"
